using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace pz3._2
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Артамонов Денис");
            Console.Write("Введіть ціле додатне число n: ");
            int n = int.Parse(Console.ReadLine());
            long product = 1;
            bool hasEven = false;

            for (int i = 2; i <= n; i += 2)
            {
                product *= i;
                hasEven = true;
            }

            if (hasEven)
                Console.WriteLine("Добуток парних чисел від 1 до " + n + " дорівнює: " + product);
            else
                Console.WriteLine("У діапазоні від 1 до " + n + " немає парних чисел.");
        }
    }
}
